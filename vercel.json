{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        { "src": "/(.*)\\.php$", "dest": "/api/$1.php" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
        "DB_HOST": "@db_host",
        "DB_DATABASE": "@db_database",
        "DB_USERNAME": "@db_username",
        "DB_PASSWORD": "@db_password"
    }
} 